function makeDockerfile ()
{
   local file="$1"
   local from="$2"

   if docker pull "${from}" ; then
      cat >"${file}" <<EOF
FROM ${from}

COPY ./run-on-arch-install.sh /root/run-on-arch-install.sh
RUN chmod +x /root/run-on-arch-install.sh && /root/run-on-arch-install.sh
EOF
   fi
}


# Architectures for Ubuntu: https://hub.docker.com/_/ubuntu
for arch in amd64 arm32v7 arm64v8 i386 ppc64le riscv64 s390x ; do
   for ubuntu in 24.04 22.04 20.04 18.04 16.04 14.04 ; do
      # shellcheck disable=SC2001
      darch="$(echo "${arch}" | sed -e "s/arm64v8/aarch64/")"
      makeDockerfile "Dockerfile.${darch}.ubuntu${ubuntu}" "${arch}/ubuntu:${ubuntu}"
   done
done


# Architectures for Debian: https://hub.docker.com/_/debian
for arch in amd64 arm32v5 arm32v7 arm64v8 i386 mips64le ppc64le riscv64 s390x ; do
   for debian in stretch jessie buster bullseye bookworm trixie unstable ; do
      # shellcheck disable=SC2001
      darch="$(echo "${arch}" | sed -e "s/arm64v8/aarch64/")"
      makeDockerfile "Dockerfile.${darch}.${debian}" "${arch}/debian:${debian}"
   done
done


# Architectures for Fedora: https://hub.docker.com/_/fedora/
for arch in amd64 arm32v7 arm64v8 ppc64le s390x ; do
   for fedora in 33 34 35 36 37 38 39 40 rawhide latest ; do
      # shellcheck disable=SC2001
      darch="$(echo "${arch}" | sed -e "s/arm64v8/aarch64/")"
      # shellcheck disable=SC2001
      dfedora=$(echo "${fedora}" | sed -e "s/^latest/_latest/")
      makeDockerfile "Dockerfile.${darch}.fedora${dfedora}" "${arch}/fedora:${fedora}"
   done
done
